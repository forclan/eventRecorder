  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "ES2017",
    "allowJs": true
  },
  "include": [
    "src/**/*",
    "node_modules/puppeteer-tsd/src/grpc.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*",
    "**/*.spec.ts"
  ]
}